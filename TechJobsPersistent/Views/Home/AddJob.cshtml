@using TechJobsPersistent.ViewModels;
@model AddJobViewModel;

<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" />
        <span></span>
    </div>
    <div class = "form-group">
        <label>Employer</label>
        <select class = "form-control">
            @foreach(var employer in Model.Employers)
            {
                <option>@employer.Text</option>
            }
        </select>
        <a asp-controller = "Employer" asp-action = "Add">Add Employer</a>
    </div>
    <div class = "form_group">
        @foreach(var skill in Model.Skills)
        {
            <label>Skills</label>
            <input type = "checkbox" name = "selectedSkills" value = "@skill.Id"/>
        }
        <a asp-controller = "Skill" asp-action = "Add">Add Skill</a>

    </div>

    

    <input type="submit" value="Add Job" />
</form>

